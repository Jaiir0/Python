num =int(input('Informe um número entre 0 e 9999: '))
if num <0 or num > 9999:
    print ('O número escolhi não está dentro do padrão pedido! ')

else:
    res1 = num % 10
    num = num //  10

    res2 = num % 10
    num = num // 10

    res3 = num % 10
    num = num // 10

    resultado = num

    soma = res1 + res2 + res3 + resultado
    print (f'A soma dos números  foi:  {soma}')
