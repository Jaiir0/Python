b = float(input('valor do lado b '))
a = float(input('valor do lado a '))
c = float(input('valor do lado c '))



if b - c < a < b + c and a - c < b < a + c and a - b < c < a + b:         
    if b != a and c != b and c != a:
        print ('O triângulo é um escaleno')

    elif b == a and b == c:
        print ('o triângulo é um equilátero')

    elif a == b or a == c or b == c:
        print('o triângulo é um isósceles ')
else:
    print ('os lados fornecidos não formam um triângulo')
